[%	meta.custom_wrapper = 'shop/wrapper.tt';
	meta.title   = category.name;
%]

<h3>
	View Category: [% category.name %]
</h3>

<fieldset>
<legend>[% category.name %]</legend>
[% FOREACH item IN items %]
<p>
	<a href="[% c.uri_for( 'shop/item/' _ item.code ) %]">[% item.name %]</a>
</p>
<p>
	[% item.paypal_button %]
</p>
[% END %]
</fieldset>

